<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.sessionplanner.web.screens.speaker">
    <data>
        <instance id="speakerDc"
                  class="com.company.sessionplanner.entity.Speaker"
                  view="speaker-with-photo-edit-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="speakerDc">
            <column width="250px">
                <textField id="firstNameField" property="firstName"/>
                <textField id="lastNameField" property="lastName"/>
                <textField id="emailField" property="email"/>
                <image id="photoImage" dataContainer="speakerDc" property="photo" scaleMode="CONTAIN"/>
                <upload id="photo" property="photo" dataContainer="speakerDc" fileStoragePutMode="IMMEDIATE"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
